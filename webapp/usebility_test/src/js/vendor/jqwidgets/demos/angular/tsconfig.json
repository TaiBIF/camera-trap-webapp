{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
	 //  	"allowJs": true,
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "typeRoots": [ "./node_modules/@types" ],
        "types": [
            "core-js",
            "node",
            "jquery"
        ],
        "lib": [ "dom", "es2015" ]
    },
    "exclude": [
        "node_modules",
        "aot",
        "temp",
		"sampledata",
		"scripts",
		"resources",
		"jqwidgets"
    ]
}
